# ServiceNow MCP Bridge Configuration
# Copy this file to .env and fill in your values

# ServiceNow Instance Configuration
# Your ServiceNow instance name (e.g., 'dev12345' for dev12345.service-now.com)
SERVICENOW_INSTANCE=your-instance-name

# Authentication Type
# Options: basic | oauth | token
SERVICENOW_AUTH_TYPE=basic

# Basic Authentication
# Required if SERVICENOW_AUTH_TYPE=basic
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# OAuth 2.0 Client Credentials
# Required if SERVICENOW_AUTH_TYPE=oauth
SERVICENOW_CLIENT_ID=
SERVICENOW_CLIENT_SECRET=
SERVICENOW_TOKEN_URL=

# Bearer Token Authentication
# Required if SERVICENOW_AUTH_TYPE=token
SERVICENOW_TOKEN=

# Optional: API Rate Limiting
# Maximum requests per minute (default: 100)
SERVICENOW_RATE_LIMIT=100

# Optional: Request Timeout
# Timeout in milliseconds (default: 30000)
SERVICENOW_TIMEOUT=30000

# Optional: Logging Level
# Options: trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# Optional: Feature Flags
# Enable/disable specific ServiceNow modules (comma-separated)
# Available: incident,change,problem,cmdb,catalog,knowledge,user
ENABLED_MODULES=incident,change,problem,cmdb,catalog,knowledge,user
